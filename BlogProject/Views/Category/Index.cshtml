@model IEnumerable<BlogProject.Models.CategoryModel>

@{
    ViewBag.Title = "Index";
}

<h2>Category List</h2>

<hr/>

<p>
    @Html.ActionLink("Create New", "Create",null,new { @class = "btn btn-primary " })
</p>
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.KategoriAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BlogSayisi)
        </th>
        <th>CRUD</th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.KategoriAdi)
    </td>
    <td>
        @item.BlogSayisi
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class="btn btn-warning btn-sm"    }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }, new {  @class= "btn btn-success btn-sm" }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new {  @class= "btn btn-danger btn-sm" })
    </td>
</tr>
}

</table>

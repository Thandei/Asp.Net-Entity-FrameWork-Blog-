@model IEnumerable<BlogProject.Models.CategoryModel>

@{
    ViewBag.Title = "Index";
}

<h2>Category List</h2>

<hr/>

@if(TempData["Kategori"] != null)
 {
    var kategori = (BlogProject.Models.category)TempData["Kategori"];
<div class="alert alert-success" role="alert">
    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-bag-check-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" d="M5.5 3.5a2.5 2.5 0 0 1 5 0V4h-5v-.5zm6 0V4H15v10a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V4h3.5v-.5a3.5 3.5 0 1 1 7 0zm-.646 5.354a.5.5 0 0 0-.708-.708L7.5 10.793 6.354 9.646a.5.5 0 1 0-.708.708l1.5 1.5a.5.5 0 0 0 .708 0l3-3z" />
    </svg>
    <strong>@kategori.KategoriAdi</strong> Güncellendi, Kayıt edilmiştir.
</div>
}

<p>
    @Html.ActionLink("Create New", "Create",null,new { @class = "btn btn-primary " })
</p>
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.KategoriAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BlogSayisi)
        </th>
        <th>CRUD</th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.KategoriAdi)
    </td>
    <td>
        @item.BlogSayisi
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class="btn btn-warning btn-sm"    }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }, new {  @class= "btn btn-success btn-sm" }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new {  @class= "btn btn-danger btn-sm" })
    </td>
</tr>
}

</table>

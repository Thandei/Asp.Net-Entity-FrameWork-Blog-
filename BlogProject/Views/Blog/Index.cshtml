@model IEnumerable<BlogProject.Models.Blog>

@{
    ViewBag.Title = "Index";
}

<h2>Blog Listesi</h2>

<hr/>

<p>
    @Html.ActionLink("Yenı Blog Ekle", "Create",null, new { @class="btn btn-primary"})
</p>
<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.KategoriAdi)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.Resim)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Baslik)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.EklenmeTarihi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Onay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Anasayfa)
        </th>
        <th style="width:250px"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.KategoriAdi)
        </td>
         
        <td>
            @Html.DisplayFor(modelItem => item.Resim)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Baslik)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.EklenmeTarihi)
        </td>
        <td>
            @if (item.Onay)
            {
                <span class="label label-success">Onaylı</span>
            }
            else
            {
                <span class="label label-danger">Onaylanmamıs</span>
            }
              
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Anasayfa)
        </td>
        <td >
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }, new {@class="btn btn-warning   inline btn-sm"}) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }, new { @class = "btn btn-success    btn-sm" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new { @class = "btn btn-danger    btn-sm" })
        </td>
    </tr>
}

</table>
